<Window x:Class="MetronomeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="800" Width="1280" Style="{StaticResource Main}">    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="100" />
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Content="Tempo"
                    Grid.Column="0"
                    Style="{StaticResource MenuButton}" />
            <Button Content="Time signature" 
                    Grid.Column="1"
                    Style="{StaticResource MenuButton}" />
            <Button Content="Sound"
                    Grid.Column="2"
                    Style="{StaticResource MenuButton}" />
            <Button Content="Settings"
                    Grid.Column="3"
                    Style="{StaticResource MenuButton}" />
            <Button Content="Help"
                    Grid.Column="4"
                    Style="{StaticResource MenuButton}" />
        </Grid>
        
        <Slider Grid.Row="1" Grid.Column="1" Grid.RowSpan="3" Orientation="Vertical" HorizontalAlignment="Center" />
        
        <StackPanel x:Name="stc_lights" Grid.Row="3"
                    Orientation="Horizontal"
                    VerticalAlignment="Stretch" HorizontalAlignment="Center" Margin="100,0,0,0" />
        <TextBlock Grid.Row="4" Grid.ColumnSpan="2" Text="Click lights to add or remove emphasis" Foreground="White" FontSize="25" HorizontalAlignment="Center" Margin="0,10,0,0" />
        <ToggleButton x:Name="btn_start" Style="{StaticResource StartButton}"
                      Checked="btn_start_Checked"
                      Unchecked="btn_start_Unchecked"
                      Content="START"
                      Grid.Row="5" Grid.ColumnSpan="2" />
    </Grid>
</Window>
